{
  "manifest_version": 3,
  "name": "ProcrastiNarrator",
  "description": "Stay on task with a narration of your actions from a third-person perspective, inspired by the game The Stanley Parable.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "desktopCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/**/*",
        "public/speech.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "/popup/popup.html"
  }
}
